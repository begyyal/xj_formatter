{
    "name": "xj-formatter",
    "displayName": "xj-formatter",
    "description": "Java formatter for VS Code Extension with minimum functionalities.",
    "version": "0.0.1",
    "publisher": "begyyal",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/begyyal/xj_formatter"
    },
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:java"
    ],
    "main": "dist/index",
    "contributes": {
        "languages": [
            {
                "id": "java",
                "aliases": [
                    "Java"
                ],
                "extensions": [
                    "java"
                ]
            }
        ]
    },
    "scripts": {
        "build": "tsc && ncc build dist/tsc/index.js",
        "reinstall": "npm run build && vsce package && code --install-extension xj-formatter-0.0.1.vsix",
        "postinstall": "node ./node_modules/vscode/bin/install && tsc"
    },
    "devDependencies": {
        "@types/node": "^22.10.5",
        "typescript": "^5.7.3",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "java-parser": "^2.3.3",
        "xjs-common": "^10.1.0"
    }
}