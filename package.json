{
    "name": "xj-formatter",
    "displayName": "xj-formatter",
    "description": "Java formatter for VSCode Extension with minimal functionalities.",
    "version": "1.0.0",
    "publisher": "begyyal",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/begyyal/xj_formatter"
    },
    "engines": {
        "vscode": "^1.106.2"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:java"
    ],
    "main": "dist/index",
    "contributes": {
        "configuration": {
            "title": "begyyal.xj-formatter",
            "type": "object",
            "properties": {}
        },
        "languages": [
            {
                "id": "java",
                "aliases": [
                    "Java"
                ],
                "extensions": [
                    ".java"
                ]
            }
        ]
    },
    "scripts": {
        "print": "ts-node ./src/test/print.ts",
        "build": "tsc && ncc build ./dist/tsc/index.js && vsce package",
        "install:vsix": "npm run build && sh ./tool/install.sh"
    },
    "devDependencies": {
        "@types/node": "^22.10.5",
        "@types/vscode": "^1.96.0",
        "@vercel/ncc": "^0.38.4",
        "@vscode/vsce": "^3.7.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3",
        "xjs-node": "^2.3.0"
    },
    "dependencies": {
        "java-parser": "^2.3.3",
        "xjs-common": "^13.3.1"
    }
}